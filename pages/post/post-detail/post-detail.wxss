.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 750rpx;
  height: 460rpx;
}
.audio{
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -55rpx;
  top: 200rpx;
  opacity: 0.4;

}
.author-date{
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 30rpx;
  line-height: 64rpx;
  vertical-align: middle;
  
}
.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  color: #666;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
}
.const-content{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}
.date{
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
  vertical-align: middle;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  margin-top: 30rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}
.tool{
  margin-top: 20rpx;
}
.cirle-img{
  margin-right: 40rpx;
  float: right;
  vertical-align: middle;
}
.cirle-img image{
  width: 60rpx;
  height: 60rpx;
}
.share-img{
  margin-left: 20rpx;
}
.line{
  width: 640rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  vertical-align: middle;
}
.content{
  font-size: 24rpx;
  margin: 30rpx 20rpx 0 30rpx;
  color: #666;
  letter-spacing: 2rpx;
  line-height: 44rpx;
}